---
import { Icon } from "astro-icon/components";
const { href = "#", target = "_self", variant = "MainPage", ikon = "" } = Astro.props;

const linkStyling = "rounded-full text-body-base";

const variantClasses = {
  MainPage: "text-link-text hover:text-link-text-hover active:underline-offset-8 decoration-border-accent visited:text-link-text-visited focus:outline-offset-4",
  SubPage: "text-link-text visited:text-link-text-visited focus:outline-offset-4",
};
---

<a href={href} class="inline-flex items-center group" target={target} class:list={[linkStyling, variantClasses[variant]]}
  ><slot />
  {ikon == "SubPage" && <Icon name="arrow-right" class="text-link-text text-body-base hidden group-hover:block transition-opacity duration-200" />}</a
>
