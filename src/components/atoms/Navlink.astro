---
const { href = "#", target = "_self", variant = "MainPage" } = Astro.props;

const linkStyling = "rounded-full text-body-base";

const variantClasses = {
  MainPage: "text-link-text hover:text-link-text-hover visited:text-link-text-visited focus:outline-offset-4",
  SubPage: "text-link-text hover:text-link-text-hover visited:text-link-text-visited focus:outline-offset-4",
};
---

<a href={href} class="" target={target} class:list={[linkStyling, variantClasses[variant]]}><slot /></a>
