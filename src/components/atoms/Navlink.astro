---
import { Icon } from "astro-icon/components";
const { href = "#", target = "_self", variant = "MainPage", ikon = "" } = Astro.props;

const linkStyling = "rounded-full text-body-base";

const variantClasses = {
  MainPage: "text-link-text hover:text-link-text-hover active:underline-offset-8 decoration-border-accent visited:text-link-text-visited focus:outline-offset-4",
  SubPage: "text-link-text visited:text-link-text-visited focus:outline-offset-4",
};
---

<a href={href} class="inline-flex items-center group gap-4" target={target} class:list={[linkStyling, variantClasses[variant]]}
  ><slot />
  {
    ikon == "SubPage" && (
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" class="w-4 h-4 shrink-0 text-link-text hidden group-hover:block transition-opacity duration-200">
        <path d="M11.293 17.293L12.707 18.707L19.414 12L12.707 5.29297L11.293 6.70697L15.586 11H6V13H15.586L11.293 17.293Z" fill="currentColor" />
      </svg>
    )
  }</a
>
