---
import { Icon } from "astro-icon/components";
import Navlink from "../atoms/Navlink.astro";
import Button from "../atoms/Button.astro";
---

<header class="flex items-center justify-between bg-background-glass backdrop-blur-xs py-4 px-[max(1rem,_50%_-_var(--content-width)_/_2)]">
  <nav>
    <ul class="flex items-center gap-8">
      <li>
        <a href="/" class="font-bold">Twentyfour</a>
      </li>
      <Navlink href="/cases" variant="MainPage">Cases</Navlink>
      <Navlink href="/services" variant="MainPage">Services</Navlink>
      <Navlink href="/blog" variant="MainPage">Blog</Navlink>
      <Navlink href="/about" variant="MainPage">Omos</Navlink>
    </ul>
  </nav>
  <div class="flex gap-4">
    <Button size="base">Kontakt os</Button>

    <div class="relative inline-block group">
      <select class="appearance-none px-4 py-2 pr-10 focus:outline-none focus:ring-2 focus:ring-text-primary focus:rounded-small">
        <option value="en">EN</option>
        <option value="da" selected>DA</option>
      </select>

      <!-- Custom ikon -->
      <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 transition-transform duration-200 group-focus-within:rotate-180">
        <svg class="w-4 h-4 text-border-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </div>
    </div>
  </div>
</header>
