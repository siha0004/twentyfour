---
import ContactInformation from "./ContactInformation.astro";
import ContactMessageform from "./ContactMessageform.astro";
import Button from "../atoms/Button.astro";
---

<div id="contact_popover" class="fixed grid place-items-center inset-0 backdrop:bg-licorice-75/50 backdrop:backdrop-blur-xs bg-transparent">
  <div class="backdrop:bg-transparent grid grid-cols-[2fr_1fr_auto] gap-5 items-start">
    <ContactInformation />
    <ContactMessageform />
    <Button variant="secondary" color="secondary" />
  </div>
</div>
