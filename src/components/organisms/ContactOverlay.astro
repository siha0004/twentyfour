---
import ContactInformation from "./ContactInformation.astro";
import ContactMessageform from "./ContactMessageform.astro";
import Button from "../atoms/Button.astro";
---

<div id="contactModalMob" class="hidden fixed place-items-center top-0 left-0 w-full h-full bg-licorice-75/50 backdrop-blur-sm z-30">
  <div class="backdrop:bg-transparent grid md:grid-cols-[2fr_1fr_auto] gap-2 md:gap-5 items-start max-w-7xl w-full p-4">
    <Button id="closeModalBtn" variant="secondary" color="secondary" />
    <ContactInformation />
    <div id="openFormBtnContainer">
      <Button id="openFormBtn" variant="secondary" color="secondary">Send os en mail</Button>
    </div>
    <ContactMessageform />
  </div>
</div>
